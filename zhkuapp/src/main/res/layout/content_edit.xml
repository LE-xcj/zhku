<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zhkuapp.view.EditActivity"
    tools:showIn="@layout/activity_edit"
    android:orientation="vertical">


    <com.loopj.android.image.SmartImageView
        android:id="@+id/img_photo"
        android:layout_marginTop="50dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:onClick="click"
        android:src="@drawable/zhku" />

<!--    <ImageView
        android:id="@+id/img_photo"
        android:layout_marginTop="50dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/plus3"
        android:onClick="click"
        android:tooltipText="选择头像" />-->

    <EditText
        android:id="@+id/et_username"
        style="@style/myFirstSet"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/top_edittext"
        android:hint="昵称:仲恺人" />

    <EditText
        android:id="@+id/et_sex"
        style="@style/myFirstSet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_edittext"
        android:clickable="true"
        android:onClick="click"
        android:focusableInTouchMode="false"
        android:hint="性别: 男" />



    <EditText
        android:id="@+id/et_selfIntroduction"
        style="@style/myFirstSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_edittext"
        android:gravity="top|left"
        android:hint="自我简介:"
        android:maxLines="5"
        android:minLines="1"
        android:paddingTop="10dp" />


    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="25dp"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/white"
        android:text="确认修改"
        android:onClick="click"/>

</LinearLayout>
