<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhkuapp.view.SetImforActivity"
    android:orientation="vertical"
    android:background="#dbdbdb">

    <RelativeLayout
        android:background="@drawable/top_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:onClick="click"
            android:textColor="@android:color/white"
            android:text="跳过"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="注册成功"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/plus3"
        android:onClick="click"
        android:tooltipText="选择头像" />

    <EditText
        android:id="@+id/et_username"
        style="@style/myFirstSet"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/top_edittext"
        android:hint="昵称:仲恺人" />

    <EditText
        android:id="@+id/et_sex"
        style="@style/myFirstSet"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_edittext"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:hint="性别: 男" />

    <EditText
        android:id="@+id/et_email"
        style="@style/myFirstSet"
        android:background="@drawable/bottom_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="邮箱:"/>

    <EditText
        android:id="@+id/et_selfIntroduction"
        style="@style/myFirstSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_edittext"
        android:gravity="top|left"
        android:hint="自我简介:"
        android:maxLines="5"
        android:minLines="1"
        android:paddingTop="10dp" />


    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="25dp"
        android:background="@drawable/button_shape"
        android:textColor="@android:color/white"
        android:text="确认"
        android:onClick="click"/>

</LinearLayout>
